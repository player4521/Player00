	<!-- 페이징 처리 후 자유게시판 리스트 -->
	<select id="boardListPaging" resultMap="BoardResultMap">
		<![CDATA[
		SELECT 
		brd_no
		, category_cd
		, title
		, content
		, tag
		, view_cnt
		, user_id
		, reg_date
		FROM
		general_board
		WHERE brd_no > 0
		ORDER BY brd_no DESC, reg_date DESC
		OFFSET #{startPage} ROWS 
		FETCH NEXT #{perPageNum} ROWS ONLY
		]]>
	</select>

	<!-- 전체 게시글 수 -->
	<select id="countArticles" resultType="int">
	    <![CDATA[
	    SELECT
	        COUNT(brd_no)
	    FROM general_board
	    WHERE brd_no > 0
	    ]]>
	</select>

	<!-- Java와DB변수명이 다른 경우 resultType 이 아닌 resultMap을 사용 -->
	<resultMap id="BoardResultMap"
		type="com.player0.app.model.BoardVo">
		<id property="brd_no" column="brd_no" />
		<result property="category_cd" column="category_cd" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="tag" column="tag" />
		<result property="view_cnt" column="view_cnt" />
		<result property="user_id" column="user_id" />
		<result property="reg_date" column="reg_date" />
		<result property="edit_date" column="edit_date" />
	</resultMap>

