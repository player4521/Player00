<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.player0.app.mappers.BoardMapper">
	<insert id="write">
		INSERT
		INTO general_board(
		category_cd
		, title
		, content
		, tag
		, view_cnt
		, user_id
		, reg_date
		, edit_date
		) VALUES (
		'test'<!-- 임시 category_cd -->
		<!-- #{categoryCd} -->
		, #{title}
		, #{content}
		, #{tag}
		, #{view_cnt}
		<!-- , #{userId} -->
		, 'test'<!-- 임시 userId -->
		, SYSDATE
		, SYSDATE
		)
	</insert>

	<select id="select" resultMap="BoardResultMap">
		SELECT
		brd_no
		, category_cd
		, title
		, content
		, tag
		, view_cnt
		, user_id
		, reg_date
		, edit_date
		FROM
		general_board
		WHERE
		brd_no = #{brd_no}
	</select>

	<update id="update">
		UPDATE general_board
		SET
		title = #{title}
		, content = #{content}
		, edit_date = SYSDATE
		WHERE
		brd_no = #{brd_no}
	</update>

	<delete id="delete">
		DELETE
		FROM
		general_board
		WHERE
		brd_no = #{brd_no}
	</delete>

